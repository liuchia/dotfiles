include "/usr/share/nano/*.nanorc"

set afterends
set nohelp
set multibuffer
set nonewlines
set tabsize 4
set linenumbers
set softwrap

set numbercolor green,normal
set titlecolor green,normal
set statuscolor green,normal

bind F1 help all
bind ^C cancel all
bind ^Q exit all
bind ^S writeout all
bind ^O insert all
bind ^F whereis all
bind M-N findnext all
bind M-P findprevious all
bind ^G replace all
bind ^X cut all
bind ^C copy main
bind ^V paste all
bind ^Space mark all
bind M-M mark all
bind ^H chopwordleft all
bind ^L curpos all
bind ^K comment all
bind ^T complete all
bind ^B firstline all
bind ^E lastline all
bind ^N nextblock all
bind ^P prevblock all
bind ^J gotoline all
bind M-B findbracket all
bind M-V verbatim all
bind M-1 recordmacro all
bind M-2 runmacro all
bind ^Z undo all
bind ^Y redo all
bind F5 refresh all
bind M-X flipexecute all
bind M-S anchor all
bind M-A prevanchor all
bind M-D nextanchor all
bind ^A "m" all
bind ^D "[A" all
bind ^R "x" all

syntax "Archive" ".*\.arx$"
color brightwhite ".+"
color blue "^[^-]+"
color red start="\(" end="\)"
color green start="\[" end="\]"
color yellow "^[0-9]*"

extendsyntax lua color ,green "[[:space:]]+$"
